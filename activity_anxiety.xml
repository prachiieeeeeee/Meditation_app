<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lilac">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:background="@null"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back_button" />

    <ImageView
        android:id="@+id/my_image"
        android:layout_width="300dp"
        android:layout_height="343dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/audioImage"
        android:src="@drawable/anxiety2" />

    <ImageButton
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/play_button_icon"
        android:background="@drawable/play_button"
        android:contentDescription="@string/playButton" />

    <ImageButton
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_image"
        android:layout_toStartOf="@id/button_1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/stop_button"
        android:src="@drawable/stop_button_icon"
        android:contentDescription="@string/stopButton" />


    <ImageButton
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_image"
        android:layout_toEndOf="@id/button_1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/pause_button"
        android:src="@drawable/pause_button_icon"
        android:contentDescription="@string/pauseButton" />

</RelativeLayout>
